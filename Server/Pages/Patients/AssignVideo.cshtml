@page "{id:guid}"
@model Server.Pages.Patients.AssignVideo

@{
    ViewData["Title"] = "Assignar video";
}

<div class="container">
    <div class="row">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <div class="col-md-12">
            <div class="list-group mt-3">
                @foreach (var category in Model.Categories)
                {
                    <h3 class="mt-3">@category.Name</h3>
                    @foreach (var v in category.Videos)
                    {
                        <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
                            <div class="d-flex w-100 justify-content-between align-items-center">
                                <div>
                                    <h5 class="mb-1">@v.Name</h5>
                                    <small class="text-muted">@v.CategoryName</small>
                                </div>
                                <form method="post">
                                    <input id="handler_parameter" type="hidden" name="videoId" value="@v.Id"/>
                                    <button type="submit" class="btn btn-primary" asp-page-handler="AssignVideo">
                                        <i class="fas fa-plus"></i>
                                    </button>
                                </form>
                            </div>
                        </a>
                    }    
                }
            </div>
        </div>
    </div>
</div>