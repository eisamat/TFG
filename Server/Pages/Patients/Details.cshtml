@page "{id:guid}"
@model PatientDetailsModel

@{
    ViewData["Title"] = "Informació del pacient";
    ViewData["string_videos_assigned"] = "Videos assignats";
    ViewData["string_user_details"] = "Detalls del pacient";
}

<div class="container">
    <div class="row">
        <h1 class="mb-3">@ViewData["Title"]</h1>
        <div class="col-md-5">
            @await Html.PartialAsync("Components/PatientDetails")
        </div>
        <div class="col-md-7">
            @await Html.PartialAsync("Components/PatientAssignedVideos")
        </div>
    </div>
</div>