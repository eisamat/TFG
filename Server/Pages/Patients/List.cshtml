@page
@model Pages.Patients.PatientListModel
@{
    ViewData["Title"] = "Llista de pacients";
    ViewData["string_new_user"] = "Afegir nou pacient";
    ViewData["string_delete_user"] = "Eliminar";
    ViewData["string_details_user"] = "Detalls";
}
<h1>@ViewData["Title"]</h1>
<a asp-page="Add"><input class="btn btn-primary" value="@ViewData["string_new_user"]"/></a>
<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Nhc</th>
            <th>Zip</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Patients)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => user.Name)</td>
                <td>@Html.DisplayFor(modelItem => user.Nhc)</td>
                <td>@Html.DisplayFor(modelItem => user.Zip)</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@user.Id">@ViewData["string_details_user"]</a> |
                    <a asp-page="./Delete" asp-route-id="@user.Id">@ViewData["string_delete_user"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>